<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservedActivity">
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:text="Reserved Film Shows"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:contentPadding="10dp"
            app:cardUseCompatPadding="true"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:id="@+id/rlWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/poster"
                    android:layout_centerVertical="true"
                    android:layout_width="150dp"
                    android:scaleType="centerCrop"
                    android:layout_height="200dp"
                    android:src="@drawable/avengers"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/poster"
                    android:layout_alignBottom="@+id/poster"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@+id/poster"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/filmTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Avengers Endgame"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Wednesday, 17 August 2018"/>
                    <TextView
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:text="CGV Mall JWALK"/>
                    <TextView
                        android:id="@+id/seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:text="C12, C13, C15"/>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>