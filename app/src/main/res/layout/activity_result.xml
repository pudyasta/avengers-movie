<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/dark_blue"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:textSize="22dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/summary"
                android:text="Order Summary"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/posterWrapper"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="10dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@+id/summary"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/poster1"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/avengers"
                android:scaleType="centerCrop"
                app:cornerRadius="60dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/posterWrapper"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textSize="20dp"
                android:layout_below="@+id/summary"
                android:text="Summary"/>
            <TextView
                android:id="@+id/bioskop1"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/posterWrapper"
                android:layout_below="@+id/title1"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Bioskop"/>
            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/posterWrapper"
                android:layout_below="@+id/bioskop1"
                android:layout_height="wrap_content"
                android:text="Bioskop"/>
            <ImageView
                android:id="@+id/subs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis"
                android:layout_marginVertical="15dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/posterWrapper"
                />

            <TextView
                android:id="@+id/ordernum"
                android:layout_width="wrap_content"
                android:layout_below="@+id/subs"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Order Number"/>
            <TextView
                android:id="@+id/ordernum1"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/ordernum"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:text="1198804794001625088"/>

            <TextView
                android:id="@+id/seatType"
                android:layout_width="wrap_content"
                android:layout_below="@+id/ordernum1"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Seat"/>
            <TextView
                android:id="@+id/seatType1"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_below="@+id/seatType"
                android:layout_height="wrap_content"
                android:text="Bioskop"/>

            <TextView
                android:id="@+id/paymnet"
                android:layout_width="wrap_content"
                android:layout_below="@+id/seatType1"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Payment Method"/>
            <TextView
                android:id="@+id/paymnet1"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/paymnet"
                android:layout_height="wrap_content"
                android:text="Bioskop"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paymnet1"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_marginVertical="5dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:text="Payment Method"/>
            <TextView
                android:id="@+id/harga1"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/harga"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:text="Bioskop"/>

            <TextView
                android:id="@+id/harga0"
                android:layout_width="wrap_content"
                android:layout_below="@+id/harga1"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:layout_marginVertical="5dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:text="Convenience Fee"/>
            <TextView
                android:id="@+id/harga10"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/harga0"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Rp 0"/>

            <ImageView
                android:id="@+id/subs2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garis"
                android:layout_marginVertical="5dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/harga10"
                />

            <TextView
                android:id="@+id/actual"
                android:layout_width="wrap_content"
                android:layout_below="@+id/subs2"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gold"
                android:text="Actual Pay"/>
            <TextView
                android:id="@+id/actual1"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:layout_below="@+id/actual"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="Rp 0"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>